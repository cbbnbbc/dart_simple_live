- name: Validate Keystore Before Build
  run: |
    # 从Secrets加载密钥库
    echo "${{ secrets.KEYSTORE_BASE64 }}" | base64 --decode > test.jks
    
    # 验证密码
    if keytool -list \
      -keystore test.jks \
      -storepass "${{ secrets.STORE_PASSWORD }}" \
      -alias "${{ secrets.KEY_ALIAS }}"; then
      echo "✅ Keystore验证成功"
    else
      echo "❌ Keystore验证失败，请检查密码或密钥库"
      exit 1
    fi
